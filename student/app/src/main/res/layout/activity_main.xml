<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Titre principal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_main"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Section Informations personnelles -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_personal_info"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Nom complet -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_full_name"
            android:inputType="textPersonName"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvNameError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- Numéro étudiant -->
        <EditText
            android:id="@+id/etStudentId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_student_id"
            android:inputType="number"
            android:maxLength="8"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvStudentIdError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- Filière -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_filiere"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rgFiliere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <RadioButton
                android:id="@+id/rbInformatique"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filiere_informatique"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbMath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filiere_mathematiques" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/rgFiliere2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbPhysique"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filiere_physique" />

            <RadioButton
                android:id="@+id/rbChimie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filiere_chimie" />

        </RadioGroup>

        <!-- Niveau -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_niveau"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerNiveau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/progressNiveau"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="20"
            android:layout_marginBottom="16dp" />

        <!-- Options -->
        <CheckBox
            android:id="@+id/cbBoursier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/option_boursier"
            android:layout_marginBottom="8dp" />

        <Switch
            android:id="@+id/switchBibliotheque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/option_bibliotheque"
            android:checked="true"
            android:layout_marginBottom="16dp" />

        <!-- Personnalisation -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_customization"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Couleur de la carte -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_card_color"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rgCouleur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbBleu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color_blue"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbVert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color_green" />

            <RadioButton
                android:id="@+id/rbRouge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color_red" />

        </RadioGroup>

        <!-- Taille du texte -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_text_size"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:id="@+id/seekbarTextSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="5"
            android:layout_marginBottom="16dp" />

        <!-- Options supplémentaires -->
        <CheckBox
            android:id="@+id/cbShowExtraInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/option_show_extra_info"
            android:checked="true"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/llExtraInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- Contenu des infos supplémentaires -->

        </LinearLayout>

        <!-- Prévisualisation -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_preview"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:id="@+id/llCardPreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvPreviewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preview_default_name"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvPreviewStudentId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preview_default_student_id"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvPreviewFiliere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preview_default_filiere"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvPreviewNiveau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preview_default_niveau"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvPreviewBoursier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preview_boursier_no"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvPreviewBibliotheque"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preview_library_access"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Boutons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btnApercu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_preview"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnGenerer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_generate"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_reset"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>